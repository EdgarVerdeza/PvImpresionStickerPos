<Window x:Class="SiasoftAppExt.PvImpresionStickerPos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SiasoftAppExt"
                     xmlns:syncfusion="http://schemas.syncfusion.com/wpf"                 
             syncfusion:SkinStorage.VisualStyle="Metro" 
              Width="500" Height="400" Title="Impresion de sticker" Loaded="Window_Loaded">
    <Window.Resources>
        <SolidColorBrush Color="#0078d4" x:Key="ColorMain"/>
        <SolidColorBrush Color="#FF0667B2" x:Key="ColorSecond"/>

        <DrawingImage x:Key="searchImage">
            <DrawingImage.Drawing>
                <DrawingGroup ClipGeometry="M0,0 V24 H24 V0 H0 Z">
                    <DrawingGroup Opacity="1">
                        <GeometryDrawing Brush="White" Geometry="F1 M24,24z M0,0z M21.707,20.293L17.168,15.754A8.527,8.527,0,1,0,15.754,17.168L20.293,21.707A1,1,0,0,0,21.707,20.293z M4,10.5A6.5,6.5,0,1,1,10.5,17A6.508,6.508,0,0,1,4,10.5z" />
                    </DrawingGroup>
                </DrawingGroup>
            </DrawingImage.Drawing>
        </DrawingImage>
        <Style TargetType="Border" x:Key="borde">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="BorderThickness" Value="1,1,1,1"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Direction="0" ShadowDepth="0.5" BlurRadius="3" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBlock" x:Key="TxTitle">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style TargetType="TextBox" x:Key="TxValue">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="5,0,5,0"/>
        </Style>
        <Style TargetType="Button" x:Key="BtnStyle">
            <Setter Property="Background" Value="{StaticResource ColorMain}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColorMain}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="Image" x:Key="imageBtn">
            <Setter Property="Margin" Value="3"/>
        </Style>
    </Window.Resources>

    <Border Style="{StaticResource borde}">
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Referencia Inicial:" Grid.Row="0" Style="{StaticResource TxTitle}"/>
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                <TextBox Name="TxRefIni" Text="0468-201008" Style="{StaticResource TxValue}" LostFocus="TextBox_LostFocus"/>
                <Button x:Name="BtnSearchRefIni" Style="{StaticResource BtnStyle}" Click="BtnSearch_Click">
                    <Image Source="{StaticResource searchImage}" Style="{StaticResource imageBtn}"/>
                </Button>
            </StackPanel>

            <TextBlock Text="Referencia Final:" Grid.Row="1" Style="{StaticResource TxTitle}"/>
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                <TextBox Name="TxRefFin" Text="0468-201008" Style="{StaticResource TxValue}" LostFocus="TextBox_LostFocus"/>
                <Button x:Name="BtnSearchRefFin" Style="{StaticResource BtnStyle}" Click="BtnSearch_Click">
                    <Image Source="{StaticResource searchImage}" Style="{StaticResource imageBtn}"/>
                </Button>
            </StackPanel>

            <TextBlock Text="Cantidad:" Grid.Row="2" Style="{StaticResource TxTitle}"/>
            <syncfusion:UpDown Name="TxCantidad" Grid.Row="2" Grid.Column="1" Value="1" MinValue="0" MaxValue="100" Width="50" Height="25" NumberDecimalDigits="0" Margin="5 0 0 0" HorizontalAlignment="Left"/>

            <!--<TextBlock Text="Tipo:" Grid.Row="3" Style="{StaticResource TxTitle}"/>
            <syncfusion:ComboBoxAdv Name="CmbTipoRep" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Margin="5" Height="25">
                <syncfusion:ComboBoxItemAdv Content="Etiqueta para muestras"/>
                <syncfusion:ComboBoxItemAdv Content="Etiqueta para producto terminado"/>
            </syncfusion:ComboBoxAdv>-->

            <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Name="BtnImprimir" Content="Imprimir" Style="{StaticResource BtnStyle}" Width="100" Height="30" Margin="5" Click="BtnImprimir_Click"/>
                <Button Name="BtnSalir" Content="Salir" Style="{StaticResource BtnStyle}" Width="100" Height="30" Margin="5" Click="BtnSalir_Click"/>
            </StackPanel>

        </Grid>
    </Border>

</Window>
